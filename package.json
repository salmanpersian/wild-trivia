{
  "name": "wild-trivia",
  "version": "1.0.0",
  "description": "A real-time multiplayer trivia game built with React, Node.js, and Express",
  "main": "server.js",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "deploy": "./deploy.sh",
    "docker:build": "docker build -t wild-trivia .",
    "docker:run": "docker run -p 8080:8080 wild-trivia",
    "docker:compose": "docker-compose up -d",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop wild-trivia",
    "pm2:restart": "pm2 restart wild-trivia",
    "pm2:logs": "pm2 logs wild-trivia"
  },
  "keywords": [
    "trivia",
    "game",
    "multiplayer",
    "react",
    "nodejs",
    "express",
    "real-time"
  ],
  "author": "Wild Trivia Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salmanpersian/wild-trivia.git"
  },
  "bugs": {
    "url": "https://github.com/salmanpersian/wild-trivia/issues"
  },
  "homepage": "https://github.com/salmanpersian/wild-trivia#readme"
}


