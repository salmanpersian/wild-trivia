{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api(?:/index)?$", "dest": "/api/index.js" },
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^/(.*)$", "dest": "/public/$1" }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  }
}
